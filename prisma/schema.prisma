generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model drivers {
  id         String     @id @unique(map: "id") @db.VarChar(255)
  name       String     @db.VarChar(255)
  email      String     @unique(map: "email") @db.VarChar(255)
  password   String     @db.VarChar(255)
  created_at DateTime?  @default(now()) @db.Timestamp(0)
  bookings   bookings[] // One-to-many relationship with bookings
}

model passengers {
  id         String     @id @unique(map: "id") @db.VarChar(255)
  name       String     @db.VarChar(255)
  email      String     @unique(map: "email") @db.VarChar(255)
  password   String     @db.VarChar(255)
  created_at DateTime?  @default(now()) @db.Timestamp(0)
  bookings   bookings[] // One-to-many relationship with bookings
}

model bookings {
  id         String      @id @db.VarChar(36)
  car        String      @db.VarChar(255)
  dateTime   DateTime    @db.DateTime(0)
  startLoc   String      @db.VarChar(255)
  endLoc     String      @db.VarChar(255)
  mobile     String      @db.VarChar(20)
  name       String      @db.VarChar(255)
  driverId   String?     @db.VarChar(36)
  driverName String?     @db.VarChar(255)
  status     String?     @db.VarChar(50)
  created_at DateTime?   @default(now()) @db.Timestamp(0)
  userId     String?     @db.VarChar(36)
  
  // Relationships
  // Note: These relationships are defined but foreign key constraints may not exist in the database
  // Run `npx prisma migrate dev` to add foreign key constraints if needed
  driver     drivers?    @relation(fields: [driverId], references: [id], onDelete: SetNull, map: "driverId")
  passenger  passengers? @relation(fields: [userId], references: [id], onDelete: SetNull, map: "userId")
}
